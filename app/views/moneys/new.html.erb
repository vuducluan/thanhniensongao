<h1><%= t "new_money" %></h1>
<div class="col-md-6 col-md-offset-3">
  <%= form_for @money, url: moneys_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :money_type %><br />
      <%= f.select :money_type, options_for_select([["Adding Money", 1], ["Using Money",2]]), {},
        class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fee %><br />
      <%= f.text_field :fee, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :note %><br />
      <%= f.text_area :note, class: "form-control"%>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
   <div class="actions">
      <%= f.submit t("create"), class: "col-md-4 btn btn-default btn-primary" %>
      <%= link_to "cancel", moneys_path, class: "col-md-4 btn btn-danger pull-right" %>
   </div>
  <% end %>
</div>
