<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-container">
    <div class="container">
      <%= link_to t("app_name"), root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("home"), root_url %></li>
          <li><%= link_to t("contribute_question"), "#" %>
          <li><%= link_to t("about"), about_url %></li>
          <% if user_signed_in? %>
            <li class="dropdown" id="dropdownMenuDivider">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
              <%= current_user.name %>
              <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                <li><%= link_to t("profile"), edit_user_registration_path %></li>
                <li><%= link_to t("sign_out"), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("sign_in"), user_session_url %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
